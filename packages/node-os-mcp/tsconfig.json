{
  "compilerOptions": {
    "declaration": true,
    "target": "ES2020",
    "module": "NodeNext",
    "outDir": "./lib",
    "rootDir": "./",
    "moduleResolution": "NodeNext",
    "sourceMap": true,
    "incremental": true,
    "tsBuildInfoFile": "./lib/.tsbuildinfo",
    "esModuleInterop": true,
    "strict": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}